root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{cs,ts,tsx,js,json,yml,yaml,md,html,css}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Makefiles use tabs by convention
[Makefile]
indent_style = tab

# Prisma schema
[*.prisma]
indent_size = 2

# Dockerfiles
[Dockerfile]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
insert_final_newline = true
